{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "outDir": "./build/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "transpileModule": true,
    "errorsAsWarnings": true
  }
}
